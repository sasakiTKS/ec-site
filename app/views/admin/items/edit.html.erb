<!--% provide(:title, "商品編集") %-->

<div class="container">
  <div class="row">
<h2 class="head-line title_h2 col-xs-8 col-xs-offset-4 bg-light">商品編集</h2>
</div>
<div class="row">

  <%= form_with model: @item, url: admin_item_path(@item), local: true, method: :patch, class: "form-horizontal" do |f| %>
  <!--%= form_for(@product, url: admin_product_path, method: :patch, class: "form-horizontal") do |f| %-->
    <!--%= render "layouts/error_messages", resource: @product%-->
    <div class="col-xs-4">
      <div class="img_field">
        商品画像
        <!--%= attachment_image_tag(@product, :image, size: "250x180") %-->
          	      <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
	      <!--%= f.attachment_field :image, class: " image" %-->
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
      <%= f.label :"商品名", class: " control-label" %>
      <%= f.text_field :name, class: " form-control-static name" %>
      </div>
      <div class="form-group">
      <%= f.label :"商品説明", class: " control-label" %>
      <%= f.text_area :introduction, class: " control-label introduction" %>
      </div>
      <div class="form-group">
      <%= f.label :"ジャンル", class: " control-label" %>
      <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: " genre_id") %>
      </div>
      <div class="form-group">
      <%= f.label :"税抜価格", class: " control-label" %>
      <%= f.text_field :price, class: " form-control-static price" %>円
      </div>
      <div class="form-group">
          <%= f.label:販売ステータス, class:"col-xs-2" %>
          <%= f.select :is_active, [['販売中', true], ['販売停止中', false]], prompt: "-- 選択してください --", class: "is_active" %>
      </div>
      <div class="actions">
	      <%= f.submit "変更を保存", class: "btn btn-success pull-right" %>
      </div>

    </div>
  <% end %>
</div>
</div>