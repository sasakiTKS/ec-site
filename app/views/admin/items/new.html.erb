<div class="container">
<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line title_h2 text-center bg-light">商品新規登録</h2>
    <%= form_with model: @item, url: admin_items_path, local: true, method: :post, class: "form-horizontal" do |f| %>
      <%= render "layouts/error_messages", resource: @item %>
      <div class="col-xs-4 col-xs-offset-1">
      <div class="img_field">
      </div>
          商品画像
  	      <%= f.file_field :image, accept: "image/*" %>
      </div>
      <br/>
      <div class="col-xs-6">
      <div class="form-group">
      <%= f.label :"商品名", class: "control-label" %>
      <%= f.text_field :name, class: "form-control-static name" %>
      </div>
      <div class="form-group">
      <%= f.label :"商品説明", class: "control-label" %>
      <%= f.text_area :introduction, class: "control-label introduction" %>
      </div>
      <div class="form-group">
      <%= f.label :"ジャンル", class: "control-label" %>
      <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "genre_id") %>
      </div>
      <div class="form-group">
      <%= f.label :"税抜価格", class: "control-label" %>
      <%= f.text_field :price, class: "form-control-static price" %>円
      </div>
      <div class="form-group">
      <%= f.label :"販売ステータス", class: "control-label" %>
      <%= f.select :is_active, [['販売中', true], ['販売停止中', false]], prompt: "-- 選択してください --", class: "is_active" %>
      </div>
      <div class="actions col-xs-7">
  	      <%= f.submit "新規登録", class: "btn btn-success btn-lg pull-right" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
</div>