</br><div class="container">
<div class="row">
  <div class="col-xs-10 col-xs-offset-1"><h2 class="head-line title_h2 text-left"><span class="bg-light" >会員一覧</span></h2>
    <table class="table table-hover table-bordered table-condensed ">
      <thead>
        <tr class="info bg-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="info col-xs-1 ">
              <%= customer.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_customer_path(customer), class: "btn-link"  do %>
                <u><%= customer.decorate.full_name %></u>
              <% end %>
            </td>
            <td class="text-left">
              <%= customer.email %>
            </td>
            <td class="col-xs-2">
              <% if customer.is_deleted == true%>
                <p><i class="text-secondary">退会</i></p>
              <% else %>
                <p><i class="text-success">有効</i></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %><i class="fas fa-sign-out-alt"></i> Log out<% end %>
    <div class= "text-center"><%= paginate(@customers) %></div>
</div>
</div>