<!--% provide(:title, "ジャンル一覧・追加") %-->
<div class="container">
<div class="row">
  <div class="col-xs-12">
    <h3 class="head-line title_h2 text-center bg-light" >ジャンル一覧・追加</h3>
    <%= render "layouts/error_messages", resource: @genre %>
    <div class="col-xs-offset-1">
      <%= form_with model: @genre, url: admin_genres_path, class: "form-inline", local: true do |f| %>
        <!--%= form_for @genre, :url => {:action => :create} do |f| %-->
          ジャンル名
          <%= f.text_field :name, :placeholder => "ジャンル名" %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-xs-8 col-xs-offset-2">
      <table class="table table-hover table-inverse ">
        <thead>
          <tr class="info bg-light">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name%></td>
              <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div class= "text-center"><%= paginate(@genres) %></div>
</div>
</div>