<div class= "container ">
  <div class= "row py-3">
    <h5 class= "col-3 manage">注文履歴詳細</h5>
  </div>
</div>

  <div class="row px-3">
    <div class="col-5">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <u><%= link_to  do %>
              <%= @order.name %>
              <% end %><u>
            </td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order.updated_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= "〒" + @order.postal_code + "  " + @order.address + "  " + @order.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td><%= form_with model:@order, url: admin_order_path(@order), local: true do |f| %>
                <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row px-3">
    <div class="col-7">
      <table class="table table-hover">
        <thead>
          <tr style="color:#fff; background:#005ab3;" >
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

       <% @order_details.each do |order_detail| %>
          <tbody>
            <tr>
  	        <td class="text-center"><%= order_detail.item.name %></td>
  	        <td class="text-center"><%= order_detail.item.price.to_s(:delimited) %>円</td>
  	        <td class="text-center"><%= order_detail.amount %></td>
  	        <td class="text-center"><%= order_detail.item.price * order_detail.amount %>円</td>
              <td>
                <%= form_with model: order_detail, url: admin_order_path(@order.id, order_detail.id), method: :patch, local:true do |f| %>
                  <%= f.select :maiking_status, [['着手不可', '着手不可'], ['製作待ち','製作待ち'], ['製作中','製作中'], ['製作完了','製作完了']] %>
                  <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
                <% end %>
               </td>
            </tr>
          </tbody>
      <% end %>
      </table>
    </div>

    <div class="col-sm-3 d-flex">
      <table class="table table-borderless align-self-end">
        <tbody>
          <tr style="border-bottom:2px solid #005ab3;">
            <td>商品合計</td>
            <td><% @order_details.each do |order_detail| %>
                <%= order_detail.item.price * order_detail.amount %>円
                <% end %></td>
          </tr>
          <tr style="border-bottom:2px solid #005ab3;">
            <td>送料</td>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求合計金額</td>
            <td><%= @order.total_amount.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>