</br><div class="container">
<div class="row">
  <div class="col-xs-12">
    <% if @address.errors.any? %>
      <%= @address.errors.count %>prohibited this obj from being saved:
        <% @address.errors.full_messages.each do |error| %>
      <%= error %>
      <% end %>
      <% end %>
    <h2 class="head-line text-left title_h2"><span class="bg-light">配送先編集</span></h2>
    <%= form_with model: @address, url: public_address_path, local:true do |f| %>

      <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号（ハイフンなし）",class: "col-xs-3" %>
            <%= f.text_field :postal_code, class: "col-xs-4" %>
          </div>

          <div class="form-group col-xs-12">
             <%= f.label :"住所", class: "col-xs-3" %>
             <%= f.text_field :address, class: "col-xs-7" %>
          </div>
          <div class="form-group col-xs-12">
           <%= f.label :"宛名", class: "col-xs-3" %>
           <%= f.text_field :name, class: "col-xs-4" %>
           <%= f.submit '変更内容を保存',class: "col-xs-2 pull-right btn-success" %>
          </div>
        <% end %>
      </div>
  </div>
</div>
</div>