<div class= "container ">
  <div class= "row py-3">
   <div class= "d-flex mx-auto">
     <div class="col-md-3">
      <table class="genre-table table table-bordered table-hover">
  <thead class="genre-thead">
    <tr>
      <th class="active">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to @items_path do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
    </div>
<div class='container'>
   <div class='row'>
       <h2 class= "col-6 text-start design">商品一覧<span>
			(全<%= @items.total_count %>件中　<%= @items.count %>件)
		</span></h2>
       <div class="d-flex align-content-stretch flex-wrap">
           <% @items.each do |item| %>
      <div class="item-container">
      <%= link_to public_item_path(item.id), class: "btn-link", :style=>"color:#0099FF;" do %>
      <div id="img_field" class="item">
        <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x150" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x150" %>
            <% end %>
      </div>
      <p class="products-name">
        <%= item.name %>
      </p>
      <% end %>
      <% if item.is_active == true %>
      <p>¥<%= item.price.to_s(:delimited) %></p>
      <% elsif item.is_active == false %>
      <p class="soldout ">売り切れ中</p>
      <% end %>
      </div>
		<% end %>
       </div>
    </div><span class="text-center"><%= paginate(@items) %></span>
</div>
</div>
</div>
</div>


