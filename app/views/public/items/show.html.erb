
<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "200x150" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x150" %>
            <% end %>
    </div>

    <div class="col-xs-6 item-show">
      <div class="item-description">
        <div class="field item-name">
          <h2><%= @item.name %></h2>
        </div>
        <div class="field">
          <%= @item.introduction %>
        </div>
        <div class="field item-price">
          <h3>¥ <%= @item.price.to_s(:delimited) %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>

      <div class="field">
         <% if @item.is_active == true %>
            <%= form_for(@cart_item, url: public_cart_items_path) do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% end %>
         <% elsif @item.is_active == false %>
          <h3>売り切れ中</h3>
         <% end %>
        <%= form_with model: @cart_item, url: public_cart_items_path, local: true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択", id: "select-quantity" %>
          <%= f.submit "カートに入れる", class: "btn btn-success ml-3" %>
        <% end %>


      </div>
    </div>
</div>