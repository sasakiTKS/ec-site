<% provide(:title, "#{@product.name}") %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "200x150" %>
            <% else %>
            <%= image_tag 'no_image', size: "200x150" %>
            <% end %>
    </div>

    <div class="col-xs-6 item-show">
      <div class="item-description">
        <div class="field item-name">
          <h2><%= @item.name %></h2>
        </div>
        <div class="field">
          <%= @item.introduction %>
        </div>
        <div class="field item-price">
          <h3>¥ <%= tax_price(@item.price).to_s(:delimited) %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>

      <div class="field">
        <% if @product.is_sale == true %>
          <% if @product.genre.is_valid == true %>
            <%= form_for(@cart_item , url: customers_cart_items_path, method: :post) do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% end %>
          <% else %>
            <h3>売り切れ中</h3>
          <% end %>
        <% elsif @product.is_sale == false %>
          <h3>売り切れ中</h3>
        <% end %>
      </div>
    </div>
</div>